# https://www.gnu.org/software/bash/manual/html_node/Bash-Startup-Files.html

create : "Execute .bash_login and .bashrc from interactive login shell (.bash_profile)" \
         ~/.bash_profile << EOF
# $TOOL $TASK start
if [ -f ~/.bash_login ]
then
  . ~/.bash_login ]
fi

if [ -f ~/.bashrc ]
then
  . ~/.bashrc
fi
# $TOOL $TASK end
EOF


create : "Define one-time login actions (.bash_login)" \
         ~/.bash_login << EOF
# $TOOL $TASK start
# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi
# $TOOL $TASK end
EOF


append : "Define bash aliases:" \
         ~/.bash_aliases << EOF

# $TOOL $TASK start
dc() { cd "\$@"; ls -la; }
dpush() { pushd "\$@"; ls -la; }
alias pushd=dpush
alias popd="popd; ls -la"
alias cd=dc
alias g='grep -r -I -n --color'
alias f='find . -name'
# $TOOL $TASK end
EOF


cmd : "Create local bin directory" \
      mkdir -p ~/.local/bin
